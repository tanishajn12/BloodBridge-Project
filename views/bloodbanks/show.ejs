<%- include('partials/header') %>

<div class="container mt-4">
    <h2><%= bloodbank.name %></h2>
    <p><strong>Address:</strong> <%= bloodbank.location.address %>, <%= bloodbank.location.city %>, <%= bloodbank.location.state %></p>
    <p><strong>Contact:</strong> <%= bloodbank.contact.phone %> | <%= bloodbank.contact.email %></p>

    <h5>Blood Availability</h5>
    <ul>
        <% for (let [type, quantity] of Object.entries(bloodbank.bloodDirectory)) { %>
            <li><%= type.replace('_', '+') %>: <%= quantity %> units</li>
        <% } %>
    </ul>

    <a href="/bloodbanks/<%= bloodbank._id %>/edit" class="btn btn-warning">Edit</a>
    <form action="/bloodbanks/<%= bloodbank._id %>?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a href="/bloodbanks" class="btn btn-secondary">Back to List</a>
</div>

<%- include('partials/footer') %>
