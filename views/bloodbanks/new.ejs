<%- include('partials/header') %>

<div class="container mt-4">
    <h2>Add a New Blood Bank</h2>
    <form action="/bloodbanks" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Blood Bank Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <h5>Location</h5>
        <div class="mb-3">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="location[address]" required>
        </div>
        <div class="mb-3">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" name="location[city]" required>
        </div>
        <div class="mb-3">
            <label for="state">State</label>
            <input type="text" class="form-control" id="state" name="location[state]" required>
        </div>

        <h5>Contact</h5>
        <div class="mb-3">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" name="contact[phone]" required>
        </div>
        <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="contact[email]" required>
        </div>

        <button type="submit" class="btn btn-success">Add Blood Bank</button>
    </form>
</div>

<%- include('partials/footer') %>
