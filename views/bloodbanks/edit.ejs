<%- include('partials/header') %>

<div class="container mt-4">
    <h2>Edit Blood Bank</h2>
    <form action="/bloodbanks/<%= bloodbank._id %>?_method=PATCH" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Blood Bank Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= bloodbank.name %>" required>
        </div>

        <h5>Location</h5>
        <div class="mb-3">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="location[address]" value="<%= bloodbank.location.address %>" required>
        </div>
        <div class="mb-3">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" name="location[city]" value="<%= bloodbank.location.city %>" required>
        </div>
        <div class="mb-3">
            <label for="state">State</label>
            <input type="text" class="form-control" id="state" name="location[state]" value="<%= bloodbank.location.state %>" required>
        </div>

        <h5>Contact</h5>
        <div class="mb-3">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" name="contact[phone]" value="<%= bloodbank.contact.phone %>" required>
        </div>
        <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="contact[email]" value="<%= bloodbank.contact.email %>" required>
        </div>

        <button type="submit" class="btn btn-success">Update Blood Bank</button>
    </form>
</div>

<%- include('partials/footer') %>
